{
  "name": "menv",
  "version": "1.0.0",
  "description": "MENV (Mongo, Express, Node, VueJS), Easily build full stack javascript web",
  "main": "server.js",
  "repository": "git@github.com:lucduong/menv.git",
  "author": "Luc <luc@ltv.vn>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config ./webpack/prod/webpack.config.js",
    "start": "cross-env NODE_ENV=production node build/app",
    "startDev": "cross-env NODE_ENV=development node build/app",
    "dev": "concurrently \"yarn webpackServer\" \"yarn watchServer\"",
    "watchServer": "nodemon -e js,jsx,json -w app.js -w lib -i lib/client -x \"webpack --config ./webpack/dev/webpack.node.config.js && yarn startDev\"",
    "webpackServer": "webpack-dev-server --config ./webpack/dev/webpack.browser.config.js --inline --hot --quiet --display-error-details",
    "eslint": "eslint ./lib --ext .js --ext .jsx",
    "test": "jest"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "body-parser": "^1.16.0",
    "chalk": "^1.1.3",
    "express": "^4.14.1",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "morgan": "^1.7.0",
    "rc": "^1.1.6",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "concurrently": "^3.1.0",
    "cross-env": "^3.1.4",
    "nodemon": "^1.11.0",
    "webpack": "^2.2.1",
    "webpack-node-externals": "^1.5.4"
  }
}
